@model SACC.Models.DIREIMPOR

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
    @*<link rel="stylesheet" href="~/Content/Acordeon.css" />*@
    <link rel="stylesheet" href="~/Content/EstiloTablas.css" />
}
@{
    var selectEstatus = new SelectList(
        new List<SelectListItem>
        {
            new SelectListItem {Text = "ACTIVO", Value = "A"},
            new SelectListItem {Text = "INACTIVO", Value = "F"},
        }, "Value", "Text");
}
<h2>Registrar bodega U.S.A.</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">       
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <table>
            <tbody>
                <tr>
                    <td>
                        <div><label>NOMBRE</label></div>
                        @*@@Html.LabelFor(model => model.NOMBRE, htmlAttributes: new { @class = "control-label col-md-2" })*@
                    </td>
                    <td>
                        @Html.EditorFor(model => model.NOMBRE, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.NOMBRE, "", new { @class = "text-danger" })
                    </td>
                    <td>
                        <div><label>DIRECCION</label></div>
                        @*@Html.LabelFor(model => model.DIRECCION, htmlAttributes: new { @class = "control-label col-md-2" })*@
                    </td>
                    <td>
                        @Html.EditorFor(model => model.DIRECCION, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.DIRECCION, "", new { @class = "text-danger" })
                    </td>
                    <td>
                        <div><label>CIUDAD</label></div>
                        @*@Html.LabelFor(model => model.CD, htmlAttributes: new { @class = "control-label col-md-2" })*@
                    </td>
                    <td>
                        @*@Html.EditorFor(model => model.IdEstatus, new { htmlAttributes = new { @class = "form-control" } })*@
                        @Html.EditorFor(model => model.CD, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.CD, "", new { @class = "text-danger" })
                    </td>
                    <td>
                        <div><label>TELEFONO 1</label></div>
                        @*@Html.LabelFor(model => model.TEL1, htmlAttributes: new { @class = "control-label col-md-2" })*@
                    </td>
                    <td>
                        @Html.EditorFor(model => model.TEL1, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TEL1, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <td>
                        &nbsp;
                    </td>
                </tr>
                <tr>
                    <td>
                        <div><label>TELEFONO 2</label></div>
                        @*@Html.LabelFor(model => model.TEL2, htmlAttributes: new { @class = "control-label col-md-2" })*@
                    </td>
                    <td>
                       @Html.EditorFor(model => model.TEL2, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TEL2, "", new { @class = "text-danger" })
                    </td>
                    <td>
                        <div><label>ESTATUS</label></div>
                        @*@Html.LabelFor(model => model.STATUS, htmlAttributes: new { @class = "control-label col-md-2" })*@
                    </td>
                    <td>
                        @Html.DropDownListFor(m => Model.STATUS, selectEstatus, "Seleccionar...", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.STATUS, "", new { @class = "text-danger" })
                    </td>                   
                </tr>
                <tr>
                    <td>
                        &nbsp;
                    </td>
                </tr>
                <tr>
                    <td>
                        <input type="submit" value="Guardar" class="btn btn-default" />
                    </td>
                    <td></td>
                </tr>
            </tbody>
        </table>           
    </div>
}
<br />
<div>
    @Html.ActionLink("Regresar", "BodegaLista")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
