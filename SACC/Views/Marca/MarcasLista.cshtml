@model IEnumerable<SACC.Models.MARCA>

@{
    ViewBag.Title = "MarcasLista";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <link rel="stylesheet" href="~/Content/EstiloTablas.css" />
}

<h2>Marcas</h2>

<p>
    @Html.ActionLink("Nuevo registro", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DESCRIPCION)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DESCRIPCION)
        </td>
        <td>
            @Html.ActionLink("Editar", "Editar", new { id=item.ID_MARCA }) |
            @Html.ActionLink("Detalles", "Detalles", new { id=item.ID_MARCA }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.ID_MARCA }, new { @class = "aElimina" })
        </td>
    </tr>
}

</table>
@section scripts {
    <script>
        $(".aElimina").click(function (event) {
            if (!confirm('Estas seguro de eliminar ?')) {
                event.preventDefault();
            }
        });
    </script>
}