@model SACC.Models.PRESENTACION

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
    @*<link rel="stylesheet" href="~/Content/Acordeon.css" />*@
    <link rel="stylesheet" href="~/Content/EstiloTablas.css" />
}
@{
    var selectEstatus = new SelectList(
        new List<SelectListItem>
        {
            new SelectListItem {Text = "ACTIVO", Value = "1"},
            new SelectListItem {Text = "INACTIVO", Value = "2"},
        }, "Value", "Text");
}
<h2>Registrar presentacion</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">        
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <table>
            <tbody>
                <tr>
                    <td>
                        <div><label>DESCRIPCION</label></div>
                        @*@Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "control-label col-md-2" })*@
                    </td>
                    <td>
                       @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
                    </td>
                    <td>
                        <div><label>FECHA</label></div>
                        @*@Html.LabelFor(model => model.Fecha, htmlAttributes: new { @class = "control-label col-md-2" })*@
                    </td>
                    <td>
                        @Html.EditorFor(model => model.Fecha, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Fecha, "", new { @class = "text-danger" })
                    </td>
                    <td>
                        <div><label>ESTATUS</label></div>
                        @*@Html.LabelFor(model => model.IdEstatus, htmlAttributes: new { @class = "control-label col-md-2" })*@
                    </td>
                    <td>
                        @*@Html.EditorFor(model => model.IdEstatus, new { htmlAttributes = new { @class = "form-control" } })*@
                        @Html.DropDownListFor(m => Model.IdEstatus, selectEstatus, "Seleccionar...", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.IdEstatus, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <td>
                        &nbsp;
                    </td>
                </tr>
                <tr>
                    <td>
                        <input type="submit" value="Guardar" class="btn btn-default" />
                    </td>
                    <td></td>
                </tr>
            </tbody>
        </table>                          
    </div>
}
<br />
<div>
    @Html.ActionLink("Regresar", "PresentacionesLista")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
